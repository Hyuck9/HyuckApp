<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messenger_chat_item_root_view"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.lhg1304.hyuckapp.page02.firemessenger.customviews.RoundedImageView
            android:id="@+id/messenger_chat_item_thumb"
            android:padding="8dp"
            android:layout_gravity="center"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size" />

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/messenger_chat_item_title"
                android:ellipsize="end"
                android:text="123123123"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/messenger_chat_item_last_message"
                android:layout_marginTop="2dp"
                android:text="123123123"
                android:ellipsize="end"
                android:textSize="10dp"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/messenger_chat_item_total_unread_count"
                android:maxLines="1"
                android:text="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:visibility="gone"
                android:textColor="@color/white"
                android:background="@drawable/rounded_my_chat_message"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/messenger_chat_item_last_message_date"
                android:layout_marginTop="4dp"
                android:textAlignment="center"
                android:maxLines="2"
                android:textColor="#68747C"
                android:textSize="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
